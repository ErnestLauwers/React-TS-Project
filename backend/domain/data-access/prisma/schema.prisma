generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  firstName String
  lastName String
  username String
  email String
  password String
  menus Menu[]
}

model Menu {
  id      Int      @id @default(autoincrement())
  name String
  comment String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Recipe {
  id Int @id @default(autoincrement())
  name String
  preparation String
  preparationTime Int
  difficultyLevel Int
  genre String
  ingredients Ingredient[]
}

model Ingredient {
  id Int @id @default(autoincrement())
  name String
  amountUsed Int
  recipes Recipe[]
}