generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  firstName String
  lastName String
  username String
  email String
  password String
  recipes Recipe[]
  profile Profile?
  reviews Review[]
}

model Menu {
  id      Int      @id @default(autoincrement())
  name String
  comment String
  recipes Recipe[]
}

model Review {
  id      Int      @id @default(autoincrement())
  score Int 
  comment String
  recipe Recipe@relation(fields: [recipeId], references: [id])
  recipeId Int
  user User@relation(fields: [userId], references: [id])
  userId Int
}

model Profile {
  id     Int  @id @default(autoincrement())
  bio String
  birthdate DateTime
  gender String
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique 
}

model Recipe {
  id Int @id @default(autoincrement())
  name String
  preparation String
  preparationTime Int
  difficultyLevel Int
  genre String
  ingredients RecipeIngredient[] 
  user User @relation(fields: [userId], references: [id])
  userId Int
  menu Menu? @relation(fields: [menuId], references: [id])
  menuId Int?
  reviews Review[]
}

model RecipeIngredient {
  recipe Recipe @relation(fields: [recipeId], references: [id])
  recipeId Int
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId Int
  @@id([recipeId, ingredientId])
}

model Ingredient {
  id Int @id @default(autoincrement())
  name String
  amountUsed Int
  recipes RecipeIngredient[]
}

